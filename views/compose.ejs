<%- include('partials/header') -%>
<div class="row">
  <div class="col-2"></div>
  <div class="col-8">
    <form action="/compose" method="POST">
      <div class="form-group">
        <label for="postTitle">Post Title</label>
        <input type="text" class="form-control" name="postTitle" placeholder="Enter Title For Blog">
      </div>
      <div class="form-group">
        <label for="exampleFormControlTextarea1">Enter Your Thoughts</label>
        <textarea class="form-control" name="blogContent" rows="5"></textarea>
      </div>
      <button type="submit" class="btn btn-primary">Submit</button>
    </form>
  </div>
  <div class="col-2"></div>
</div>