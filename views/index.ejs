    <div class="jumbotron jumbotron-fluid shadow p-3 mb-5 bg-white rounded">
      <h1 class="display-3">Welcome To Your Journal</h1>
      <p class="lead"><%=startingContent%></p>
      <hr class="my-4">
      <p>It uses utility classes for typography and spacing to space content out within the larger container.</p>
      <p class="lead">
        <a class="btn btn-primary btn-lg" href="#" role="button">Learn more</a>
      </p>
    </div>
    <div class="container-fluid">
      <div class="row card-row">
        <% posts.forEach((post) => {%>
        <div class="card bg-secondary border-warning mb-3 shadow rounded" style="max-width: 20rem;">
          <div class="card-header">
            <h3 class="mx-auto blog-title"><%=post.title%></h3>
          </div>
          <div class="card-body">
            <!-- <h4 class="card-title"></h4> -->
            <p class="card-text">
              <%if(post.content.length > 100) {%>
              <%=post.content.slice(0, 100) + '...'%><a href="/posts/<%=post._id%>" class="text-info">Read More</a>
              <%} else{%>
              <%=post.content%>
              <%}%>
          </p>
        </div>
      </div>
      <%});%>
          </div>
        </div>
      </div>
      <div class="col-1"></div>
    </div>