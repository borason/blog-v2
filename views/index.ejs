<%- include('partials/header') -%>
<div class="row">
  <div class="col-1"></div>
  <div class="col-10">
    <div class="jumbotron jumbotron-fluid">
      <div class="container">
        <h1>Home</h1>
        <p><%=startingContent%></p>
      </div>
    </div>
    <div class="row">
      <% posts.forEach((post) => {%>
      <div class="card bg-secondary border-warning mb-3" style="max-width: 20rem;">
        <div class="card-header">
          <h3><%=post.title%></h3>
        </div>
        <div class="card-body">
          <!-- <h4 class="card-title"></h4> -->
          <p class="card-text">
            <%if(post.content.length > 100) {%>
            <%=post.content.slice(0, 100) + '...'%><a href="/posts/<%=post._id%>">Read More</a>
            <%} else{%>
            <%=post.content%>
            <%}%>
          </p>
        </div>
      </div>
      <%});%>
        </div>
      </div>
      <div class="col-1"></div>
    </div>