<%- include('partials/header') -%>
<div class="row">
  <div class="col-1"></div>
  <div class="col-10">
    <div class="jumbotron jumbotron-fluid">
      <div class="container">
        <h1>Home</h1>
        <p><%=startingContent%></p>
      </div>
    </div>
    <div class="row">
      <% posts.forEach((post) => {%>
      <div class="card bg-secondary mb-3" style="max-width: 20rem;">
        <div class="card-header">Header</div>
        <div class="card-body">
          <h4 class="card-title"><%=post.title%></h4>
          <p class="card-text">
            <%if(post.content.length > 100) {%>
            <%=post.content.slice(0, 100) + '...'%><a href="">Read More</a>
            <%}%>
          </p>
        </div>
      </div>
      <%});%>
        </div>
      </div>
      <div class="col-1"></div>
    </div>